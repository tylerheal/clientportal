# Enable mod_rewrite
RewriteEngine On

# Make sure we are not rewriting real files or directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# If the request doesn't end with .php but such a file exists, serve it
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*?)/?$ $1.php [L]

# Optional: remove .php from generated links (redirect to clean URL)
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?]
RewriteRule ^ %1 [R=301,L]

# Optional: force HTTPS (uncomment if needed)
# RewriteCond %{HTTPS} off
